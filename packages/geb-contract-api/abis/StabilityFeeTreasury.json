    "devdoc": {
        "methods": {
            "addAuthorization(address)": {
                "params": { "account": "Account to add auth to" }
            },
            "giveFunds(address,uint256)": {
                "params": {
                    "account": "Address to transfer SF to",
                    "rad": "Amount of internal system coins to transfer (a number with 45 decimals)"
                }
            },
            "modifyParameters(bytes32,address)": {
                "params": {
                    "addr": "New address for the contract",
                    "parameter": "The name of the contract whose address will be changed"
                }
            },
            "modifyParameters(bytes32,uint256)": {
                "params": {
                    "parameter": "The name of the parameter to modify",
                    "val": "New parameter value"
                }
            },
            "pullFunds(address,address,uint256)": {
                "params": {
                    "dstAccount": "Address to transfer funds to",
                    "token": "Address of the token to transfer (in this case it must be the address of the ERC20 system coin).             Used only to adhere to a standard for automated, on-chain treasuries",
                    "wad": "Amount of system coins (SF) to transfer (expressed as an 18 decimal number but the contract will transfer internal system coins that have 45 decimals)"
                }
            },
            "removeAuthorization(address)": {
                "params": { "account": "Account to remove auth from" }
            },
            "setPerBlockAllowance(address,uint256)": {
                "params": {
                    "account": "The approved address",
                    "rad": "The per block approved amount of SF to withdraw (number with 45 decimals)"
                }
            },
            "setTotalAllowance(address,uint256)": {
                "params": {
                    "account": "The approved address",
                    "rad": "The total approved amount of SF to withdraw (number with 45 decimals)"
                }
            },
            "takeFunds(address,uint256)": {
                "params": {
                    "account": "Address to take system coins from",
                    "rad": "Amount of internal system coins to take from the account (a number with 45 decimals)"
                }
            }
        }
    },
    "userdoc": {
        "methods": {
            "addAuthorization(address)": { "notice": "Add auth to an account" },
            "disableContract()": {
                "notice": "Disable this contract (normally called by GlobalSettlement)"
            },
            "giveFunds(address,uint256)": {
                "notice": "Governance transfers SF to an address"
            },
            "modifyParameters(bytes32,address)": {
                "notice": "Modify contract addresses"
            },
            "modifyParameters(bytes32,uint256)": {
                "notice": "Modify uint256 parameters"
            },
            "pullFunds(address,address,uint256)": {
                "notice": "Pull stability fees from the treasury (if your allowance permits)"
            },
            "removeAuthorization(address)": {
                "notice": "Remove auth from an account"
            },
            "setPerBlockAllowance(address,uint256)": {
                "notice": "Modify an address' per block allowance in order to withdraw SF from the treasury"
            },
            "setTotalAllowance(address,uint256)": {
                "notice": "Modify an address' total allowance in order to withdraw SF from the treasury"
            },
            "takeFunds(address,uint256)": {
                "notice": "Governance takes funds from an address"
            },
            "transferSurplusFunds()": {
                "notice": "Transfer surplus stability fees to the AccountingEngine. This is here to make sure that the treasury doesn't accumulate too many fees that it doesn't even need in order to pay for allowances. It ensures that there are enough funds left in the treasury to account for projected expenses (latest expenses multiplied by an expense multiplier)"
            }
        }
    }
